<div class="col-md-12 col-12">
    <section class="cart-table mb-2">
        <div class="container cont mt-5">
            <table class="table">
                <h3 class="text-center text-muted mt-3 mb-3">My Order</h3>
                <thead>
                    <tr class="order-head">
                        <th scope="col">Order ID</th>
                        <th scope="col" class="d-none d-md-block">Amount</th>
                        <th scope="col">Date</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>

                        <td class="id-td ">
                            <a href="/view-order-prod/{{this._id}}" class="prod-id">{{this._id}}</a>
                        </td>
                        <td class="d-none d-md-block">₹ <span class="text-success">{{this.totalAmount}}</span> /-</td>
                        <td>{{this.date}}</td>
                        <td>
                            <a href="/view-order-prod/{{this._id}}" class="item-btn d-none d-md-block"><b>View product</b></a>
                        </td>
                        <td>
                            <a href="/view-order-prod/{{this._id}}" class="item-btn d-md-none"><b>View</b></a>
                        </td>
                        <td>
                            <a href="/order-tracking/{{this._id}}" class="item-btn d-none d-md-block"><b>Track order</b></a>
                        </td>
                        <td>
                            <a href="/order-tracking/{{this._id}}" class="item-btn d-md-none"><b>Track</b></a>
                        </td>
                    
                    </tr>
                    {{/each}}

                    
                </tbody>
            </table>
        </div>
    </section>
    <section class="cart-footer">
        <div class="container cont text-center">
            <a href="/" class="btn home-btn underlineHover" style="color: #f52b07;">Continue shopping</a>
        </div>
    </section>
</div>

