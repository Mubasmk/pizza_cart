{{!-- user home stylesheet --}}
<link rel="stylesheet" href="/stylesheets/user-home.css">   
{{!-- user home stylesheet --}}

{{!-- alert message --}}
<div class="notify"><span id="notifyType" class=""></span></div>
{{!-- alert message --}}

<section id="showcase">
    <div class="container">
        <div class="row py-5">
            <div class="col-12 col-md-6 ">
                <img src="/images/pizza_slide2.png" alt="" class="img-fluid">
            </div>
            {{!-- grid-column --}}

            <div class="col-12 col-md-6 mx-auto my-5 text-center" id="showcase_text">
                <h5>Having a bad day ?</h5>
                <h1>Have a pizza</h1>
                <a href="#item-card">
                    <h6>Order Now</h6>
                </a>
            </div>
            {{!-- grid-column --}}
        </div>
        {{!-- grid-row --}}
    </div>
    {{!-- container --}}
</section>

<section class="bg-light">
    <div class="container py-lg-2 py-md-2">
        <div class="title-content text-center">
            <h6 id="item-card" class="sub-title mt-4">special combo</h6>
            <h3 class="big-title">Our Delicious Pizza</h3>
        </div>
        {{!-- title-content --}}
    </div>
    {{!-- container --}}
</section>

<div class="container">
    <div class="row">
        {{!-- products details looping --}}
        {{#each products}}
        <div class="col-lg-4 col-sm-6 col-12">
            <div class="card item-card" style="width: 22rem;">
                <a href="/product-details/{{this._id}}"><img class="card-img-top mb-3" src="/images/{{this._id}}.jpg" alt="Card image cap"></a>
                <div class="card-body">
                    <h4 class="card-title text-center">{{this.Title}} {{this.Item}}</h4>
                    <h5 class="text-center mb-5">({{this.Category}})</h5>
                    <h5 class="ml-2" style="display: inline-block;"><b>â‚¹ {{this.Price}}/-</b></h5>
                    <button onclick="addToCart('{{this._id}}')" class="btn float-right mr-2"
                        style="display: inline-block;">+
                        Add</button>
                </div>
                {{!-- card-body --}}
            </div>
            {{!-- card --}}
        </div>
        {{!-- grid-column --}}
        {{/each}}
        {{!-- products details looping --}}
    </div>
    {{!-- grid-row --}}
</div>
{{!-- container --}}

<section class="about-us mt-5">
