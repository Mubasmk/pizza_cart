{{!-- contact form alert ajax function --}}
<script>
        $("#submit-form").submit((e)=>{
            e.preventDefault()
            $.ajax({
                url:"https://script.google.com/macros/s/AKfycbzS96qImlkvV3tz8y-c1_cnOvLpr31iQ2xXKFDsUw/exec",
                data:$("#submit-form").serialize(),
                method:"post",
                success:function (response){
                $(".notify").toggleClass("active");
                $("#notifyType").toggleClass("success");

                setTimeout(function () {
                    $(".notify").removeClass("active");
                    $("#notifyType").removeClass("success");
                }, 2000);
                setTimeout(()=>{
                    location.reload()
                },2100);
                },
                error:function (err){
                    alert("Something Error")
                }
            })
        })
</script>
{{!-- contact form alert ajax function --}}