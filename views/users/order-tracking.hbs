{{!-- order-track page stylesheet --}}
<link rel="stylesheet" href="/stylesheets/order-tracking.css">
{{!-- order-track page stylesheet --}}

<div class="container">
    <article class="card">
        <header class="card-header"> My Orders / Tracking </header>
        <div class="card-body">
            {{!-- order details looping --}}
            {{#each orders}}
            <h6>Order ID: {{this._id}}</h6>
            <article class="card">
                <div class="card-body row">
                    <div class="col"> <strong>Estimated Delivery time:</strong> <br>{{expectedDel}} </div>
                    <div class="col"> <strong>Shipping BY:</strong> <br> BLUEDART, | <i class="fa fa-phone"></i>
                        +1598675986 </div>
                    <div class="col"> <strong>Status:</strong> <br> {{status}} </div>
                    <div class="col"> <strong>Tracking #:</strong> <br> BD045903594059 </div>
                </div>
                {{!-- grid-row --}}
            </article>
            {{/each}}
            {{!-- order details looping --}}
            <div class="track">
                <div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span
                        class="text">Order confirmed</span> </div>
                <div class="step "> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text">
                        Picked by courier</span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text"> On the
                        way </span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Ready for
                        pickup</span> </div>
            </div>
            {{!-- track --}}
            <hr>
            <ul class="row">
                {{!-- product details looping --}}
                {{#each products}}
                <li class="col-md-4">
                    <figure class="itemside mb-3">
                        <div class="aside"><img src="/images/{{this.product._id}}.jpg" class="img-sm border"></div>
                        <figcaption class="info align-self-center">
                            <p class="title">{{this.product.Title}} {{this.product.Item}}<br><span
                                    style="text-transform: uppercase;font-size: 15px">{{this.product.Variety}}
                                    ({{this.product.Category}})</span></p> <span class="text-muted">₹
                                {{this.product.Price}} /- </span>
                        </figcaption>
                    </figure>
                </li>
                {{/each}}
                {{!-- product details looping --}}
            </ul>
            <hr>
            <a href="/my-order" class="btn btn-warning" data-abc="true" style="font-size: 13px; width: 145px"> <i
                    class="fa fa-chevron-left"></i> Back to orders</a>
            <a href="/" class="btn btn-warning float-right" data-abc="true" style="font-size: 13px; width: 145px">
                Continue shopping <i class="fa fa-chevron-right"></i></a>
        </div>
        {{!-- card-body --}}
    </article>
</div>
